<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="#E8E0E6"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00E1775E"
        android:scaleType="fitCenter"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="-24dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/asul"
        android:gravity="center"
        android:text="Sign Up"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerRegion"/>

    <LinearLayout
        android:id="@+id/registerRegion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_rectangle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerTitle"
        app:layout_constraintBottom_toTopOf="@id/signUpButton" >

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:fontFamily="@font/asul"
            android:hint="Email"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:fontFamily="@font/asul"
            android:hint="Password"
            android:layout_marginHorizontal="10dp"
            android:singleLine="true"
            android:inputType="textPassword" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="18sp"
        android:fontFamily="@font/asul"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/registerRegion"
        app:layout_constraintBottom_toTopOf="@id/signUpButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/signUpButton"
        android:layout_width="300sp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/sign_up_colour"
        android:fontFamily="@font/asul"
        android:clickable="true"
        android:focusable="true"
        android:text="SIGN UP"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toBottomOf="@id/registerRegion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
