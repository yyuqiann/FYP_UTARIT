<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@color/marigold"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/asul"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:text="Welcome to UTARIT"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appIcon"
        app:layout_constraintBottom_toTopOf="@id/inputRegion" />

    <LinearLayout
        android:id="@+id/inputRegion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_rectangle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintBottom_toTopOf="@id/resultText" >

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:fontFamily="@font/asul"
            android:hint="Email"
            android:singleLine="true"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:fontFamily="@font/asul"
            android:hint="Password"
            android:singleLine="true"
            android:inputType="textPassword" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="18sp"
        android:fontFamily="@font/asul"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/inputRegion"
        app:layout_constraintBottom_toTopOf="@id/controlRegion"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/controlRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultText"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/signInButton"
            android:layout_width="300sp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/asul"
            android:background="@drawable/sign_in_colour"
            android:text="SIGN IN" />

        <TextView
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asul"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="OR"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signUpButton"
            android:layout_width="300sp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:background="@drawable/sign_up_colour"
            android:fontFamily="@font/asul"
            android:text="SIGN UP" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
